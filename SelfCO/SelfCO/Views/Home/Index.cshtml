@{
    ViewData["Title"] = "Welcome";
}

<div class="text-center mt-5">
    <h1 class="display-4">Self-Checkout System</h1>
    <p class="lead">Scan your products and checkout quickly!</p>
    
    <div class="mt-5">
        <a asp-controller="Checkout" asp-action="Scan" class="btn btn-primary btn-lg px-5 py-3">
            <i class="bi bi-upc-scan"></i> Start Shopping
        </a>
    </div>
    
    <div class="mt-4">
        <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-gear"></i> Admin Panel
        </a>
    </div>
</div>