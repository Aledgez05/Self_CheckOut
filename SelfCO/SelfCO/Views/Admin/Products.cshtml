@model IEnumerable<SelfCheckoutSystem.Models.Product>

@{
    ViewData["Title"] = "Product Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Product Management</h2>
        <a asp-action="CreateProduct" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Product
        </a>
    </div>
    <hr />

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td><code>@product.Code</code></td>
                        <td>@product.Name</td>
                        <td>@product.Brand</td>
                        <td>@product.Category.Name</td>
                        <td><strong>$@product.Price.ToString("F2")</strong></td>
                        <td>
                            <form asp-action="DeleteProduct" asp-route-id="@product.ProductId" 
                                  method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" 
                                        onclick="return confirm('Delete this product?')">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>