@model SelfCheckoutSystem.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Payment";
}

<div class="container mt-4">
    <h2>Payment</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5>Select Payment Method</h5>
                    <form asp-action="ProcessPayment" method="post">
                        <div class="mb-3">
                            <label class="form-label">Payment Method</label>
                            @foreach (var method in Model.AvailablePaymentMethods)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" 
                                           name="PaymentMethod" value="@method" 
                                           id="payment_@method" required />
                                    <label class="form-check-label" for="payment_@method">
                                        @method
                                    </label>
                                </div>
                            }
                            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email (optional for receipt)</label>
                            <input asp-for="Email" class="form-control" placeholder="your@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100">
                            Complete Payment - $@Model.Cart.TotalAmount.ToString("F2")
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5>Order Summary</h5>
                    <hr />
                    @foreach (var item in Model.Cart.Items)
                    {
                        <p class="mb-1">
                            @item.ProductName x @item.Quantity
                            <span class="float-end">$@item.Subtotal.ToString("F2")</span>
                        </p>
                    }
                    <hr />
                    <h4>Total: $@Model.Cart.TotalAmount.ToString("F2")</h4>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}