@model SelfCheckoutSystem.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <h2>Shopping Cart</h2>
    <hr />

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info">
            Your cart is empty. <a asp-action="Scan">Start scanning products</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Subtotal</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <strong>@item.ProductName</strong><br />
                                    <small class="text-muted">@item.Barcode</small>
                                </td>
                                <td>$@item.Price.ToString("F2")</td>
                                <td>
                                    <form asp-action="UpdateCart" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <input type="number" name="quantity" value="@item.Quantity" 
                                               min="1" max="99" class="form-control form-control-sm" 
                                               style="width: 70px; display: inline;" 
                                               onchange="this.form.submit()" />
                                    </form>
                                </td>
                                <td>$@item.Subtotal.ToString("F2")</td>
                                <td>
                                    <form asp-action="RemoveItem" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5>Order Summary</h5>
                        <hr />
                        <p><strong>Total Items:</strong> @Model.TotalItems</p>
                        <p class="h4"><strong>Total:</strong> $@Model.TotalAmount.ToString("F2")</p>
                        <hr />
                        <a asp-action="Payment" class="btn btn-success btn-lg w-100">
                            Proceed to Payment
                        </a>
                        <a asp-action="Scan" class="btn btn-secondary w-100 mt-2">
                            Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>